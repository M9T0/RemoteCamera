<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:layout_width="fill_parent">
	<Button android:id="@+id/button_camera" android:layout_height="wrap_content"
		android:text="@string/menu_camera" android:layout_width="fill_parent"></Button>
	<Button android:id="@+id/button_shutter" android:layout_height="wrap_content"
		android:text="@string/menu_shutter" android:layout_width="fill_parent"></Button>
	<Button android:layout_height="wrap_content" android:text="@string/menu_exit"
		android:id="@+id/button_exit" android:layout_width="fill_parent"></Button>
	<com.google.ads.AdView android:id="@+id/ad"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		ads:adUnitId="a14e1261b2cc426"
		ads:adSize="BANNER"
		ads:loadAdOnCreate="true" />
</LinearLayout>
